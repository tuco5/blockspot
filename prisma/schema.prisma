// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id    String  @id @default(uuid()) @db.Uuid
    name  String?
    email String? @unique
    image String?
    phone String?

    ownerOf  Group[] @relation("owner")
    memberOf Group[] @relation("members")
}

model Group {
    id        String   @id @default(uuid()) @db.Uuid
    userId    String   @db.Uuid
    name      String
    location  String
    image     String?
    isPrivate Boolean? @default(true)

    owner    User   @relation("owner", fields: [userId], references: [id], onDelete: Cascade)
    memebers User[] @relation("members")
    Spot     Spot[]
}

model Spot {
    id    String  @id @default(uuid()) @db.Uuid
    name  String
    image String?

    type SpotType

    organization Group @relation(fields: [id], references: [id], onDelete: Cascade)
}

enum SpotType {
    CANCHA
    TERREZA
    AUDITORIO
    SALON
    LABORATORIO
}
